<article class="resume-timeline-item position-relative pb-5">
    <div class="resume-timeline-item-header mb-2">
        <div class="d-flex flex-column flex-md-row">
            <h3 class="resume-position-title font-weight-bold mb-1">{{ work.position }}</h3>
            <div class="resume-company-name ml-auto">{{ work.company }}</div>
        </div><!--//row-->

        <div class="resume-position-time">{{ work.startDate }} - {{ work.endDate or 'Present' }}</div>
    </div><!--//resume-timeline-item-header-->

    <div class="resume-timeline-item-desc">
        <p>
            {{ work.summary|replace("\n", '<br>')|safe }}
        </p>

        <h4 class="resume-timeline-item-desc-heading font-weight-bold">
            Tech environment:
        </h4>

        <ul class="list-inline">
            {% for technology in work.highlights %}
                <li class="list-inline-item">
                    <span class="badge badge-primary badge-pill">{{ technology }}</span>
                </li>
            {% endfor %}
        </ul>
    </div><!--//resume-timeline-item-desc-->
</article><!--//resume-timeline-item-->
